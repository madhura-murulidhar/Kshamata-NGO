<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/picture"
            android:layout_margin="10dp"
            android:background="#666666"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name"
            android:textSize="22sp"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:text="10/11/2017"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lakshmi"
            android:textSize="26sp"
            android:layout_alignTop="@+id/photo"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangalore"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job during joining"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:id="@+id/textView3" />

            <TextView
            android:id="@+id/jobJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random job"
                android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"/>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary during joining"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/salaryJoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12,000 per annum"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/directions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Get Directions"
        android:background="@color/colorPrimary"/>

    <Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="20dp"
    android:text="Know more"
    android:background="@color/colorPrimary"/>

</LinearLayout>
